<!DOCTYPE html>
<html>

<head>
  <%- include ('include-head') %>
</head>
<script>
  $(function () {
    $(".btn-writer").click(function () {
      document.location.href = "/bbs/insert"
    })
    $(".bbs_tr").click(function () {
      let id = $(this).data("id")
      document.location.href="/bbs/view/" +id
    })
  })
</script>

<body>
  <%- include ('include-header') %>
  <section class="container-fluid">
    <table class="w3-table-all">
      <tr>
        <th>NO</th>
        <th>작성일자</th>
        <th>작성시각</th>
        <th>작성자</th>
        <th>제목</th>
        <th>조회수</th>
      </tr>
      <% bbsList.forEach(function(bbs,index){ %>
      <tr class="bbs_tr" data-id="<%- bbs.b_id %>">
        <td><%- index +1 %></td>
        <td><%- bbs.b_date %></td>
        <td><%- bbs.b_time %></td>
        <td><%- bbs.b_writer %></td>
        <td><%- bbs.b_subject %></td>
        <td><%- bbs.b_count %></td>
      </tr>
      <%  }) %>
    </table>
  </section>
  <section class="container-fluid m-5">
    <button class="w3-button w3-pink w3-center btn-writer">게시판 작성</button>
  </section>
</body>

</html>